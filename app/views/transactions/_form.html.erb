<script src="https://js.stripe.com/v3/"></script>
<%= form_with(model: transaction, local: true, class: "col-lg-10") do |form| %>
  <% if transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
      <% transaction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="form-row">   
      <%= form.label :name %>
      <%= form.text_field :name, placeholder: "Jane Doe" %>
    </div>
    <div class="form-row">
      <%= form.label :email %>
      <%= form.text_field :email, placeholder: "janedoe@gmail.com" %>
    </div>
    <div class="form-row">
      <%= form.label :phone %>
      <%= form.text_field :phone, placeholder: "(333) 333-3333" %>
    </div>
    <div class="form-row">
      <%= form.label :start_date %>
      <%= form.date_select :start_date %>
    </div>
  </div>
  <div class="form-group">
    <div class="form-row">
      <%= form.label :sales_rep_name, "Sales Rep" %>
      <%= form.text_field :sales_rep_name, placeholder: "John Smith" %>
    </div>
  </div>

  <div class="form-group">
    <div class="form-row">
      <%= form.label :item %>
      <!-- <%= form.text_field :item %> -->
      <div class="w-100 py-3">
        <div class="form-check">
          <%= label_tag(:item, "6 Weeks - $447.00") %>
          <%= radio_button_tag(:item_id, "0") %>      
        </div>
        <div class="form-check">
          <%= label_tag(:item, "Single Float - $75.00") %>
          <%= radio_button_tag(:item, "1") %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="form-row">

      <%= label_tag(:"card-element", "Credit Card") %>
      <div id="card-element">
        <!-- A Stripe Element will be inserted here. -->
      </div>
      <!-- Used to display form errors. -->
      <div id="card-errors" role="alert"></div>
    </div>
  </div>
  

  <div class="form-group">
    <div class="form-row">
      <%= form.label :connected_account_id, "Account" %>
      <%= form.text_field :connected_account_id %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
